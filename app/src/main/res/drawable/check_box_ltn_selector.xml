<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:drawable="@drawable/ltn" android:state_checked="true">
        <shape>
            <solid android:color="@color/check_box_selected_bg" />
            <corners android:radius="5dp" />
            <stroke android:width="5dp" android:color="@color/main_background" />
            <padding android:bottom="10dp" android:top="10dp" />
        </shape>
    </item>

    <item android:drawable="@drawable/no_ltn" android:state_checked="false">
        <shape>
            <solid android:color="@color/check_box_no_selected_bg" />
            <stroke android:width="5dp" android:color="@color/main_background" />
            <corners android:radius="5dp" />
            <padding android:bottom="10dp" android:top="10dp" />
        </shape>
    </item>


</selector>