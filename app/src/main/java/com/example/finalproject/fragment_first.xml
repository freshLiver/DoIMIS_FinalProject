<?xml version="1.0" encoding="utf-8"?>
<androidx.appcompat.widget.LinearLayoutCompat xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="5dp"
        android:orientation="vertical"
        tools:context=".FirstFragment">


    <LinearLayout
            android:id="@+id/LLSearchSettingDate"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical">

        <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="#BEBEBE"
                android:gravity="center"
                android:text="請選擇時間範圍"
                android:textAlignment="center"
                android:textSize="25sp" />

        <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="10dp"
                android:text="從 YYYY 年 MM 月 DD 日"
                android:textAlignment="center"
                android:textSize="25dp" />

        <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="10dp"
                android:text="到 YYYY 年 MM 月 DD 日"
                android:textAlignment="center"
                android:textSize="25dp" />

        <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:orientation="horizontal">

            <Button
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="選擇起始時間"
                    android:textSize="20sp" />

            <Button
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="選擇結束日期"
                    android:textSize="20sp" />
        </LinearLayout>


    </LinearLayout>

    <LinearLayout
            android:id="@+id/LLSearchSettingMedia"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical">

        <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="#BEBEBE"
                android:gravity="center"
                android:text="請選擇想看的媒體"
                android:textAlignment="center"
                android:textSize="25sp" />

        <LinearLayout
                android:id="@+id/LLSearchSettingMediaR1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:orientation="horizontal">

            <CheckBox
                    android:id="@+id/CBMedia_TVBS"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="center_horizontal"
                    android:text="TVBS"
                    android:textAlignment="center"
                    android:textSize="25sp" />

            <CheckBox
                    android:id="@+id/CBMedia_APPLE"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="center_horizontal"
                    android:text="新頭殼"
                    android:textAlignment="center"
                    android:textSize="25sp" />
        </LinearLayout>

        <LinearLayout
                android:id="@+id/LLSearchSettingMediaR2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:orientation="horizontal">

            <CheckBox
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="center_horizontal"
                    android:text="中時電子報"
                    android:textAlignment="center"
                    android:textSize="25sp" />

            <CheckBox
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="center_horizontal"
                    android:text="蘋果日報"
                    android:textAlignment="center"
                    android:textSize="25sp" />
        </LinearLayout>

        <LinearLayout
                android:id="@+id/LLSearchSettingMediaR3"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:orientation="horizontal">

            <CheckBox
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="center_horizontal"
                    android:text="三立新聞網"
                    android:textAlignment="center"
                    android:textSize="25sp" />

            <CheckBox
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="center_horizontal"
                    android:text="自由時報"
                    android:textAlignment="center"
                    android:textSize="25sp" />
        </LinearLayout>
    </LinearLayout>

    <LinearLayout
            android:id="@+id/LLSearchSettingButtons"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="vertical">

        <Button
                android:id="@+id/btnSearchSettingBack"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="返回主頁面"
                android:textSize="20sp" />

        <Button
                android:id="@+id/btnSearchSettingSearch"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="搜尋新聞"
                android:textSize="20sp" />
    </LinearLayout>

</androidx.appcompat.widget.LinearLayoutCompat>